/- incomplete page
.page
  .row
    .col-sm-3
      section.panel.panel-default.mail-categories
        .panel-heading
          a.btn.btn-block.btn-lg.btn-primary(href='#/message/compose') Compose
        ul.list-group
          li.list-group-item.active
            a(href='')
              i.fa.fa-inbox
              | Inbox
              span.badge.badge-info.pull-right <unread>
          li.list-group-item
            a(href='')
              i.fa.fa-envelope-o
              | Sent mail
    .col-sm-9
      section.panel.panel-default.mail-container.mail-compose
        .panel-heading
          strong
            span.glyphicon.glyphicon-th
            |  Compose Mail
        .panel-body
          form.form-horizontal
            .form-group
              label.col-xs-2(for='msgTo') To:
              .col-xs-10
                input#mail_to.form-control(type='text')
            .form-group
              label.col-xs-2(for='msgSubject') Subject:
              .col-xs-10
                input#mail_subject.form-control(type='text')
            .ui-editor(text-angular='', ng-model='msgBody')
          .mail-actions
            .btn.btn-sm.btn-primary Send
            .btn.btn-sm.btn-default Discard
