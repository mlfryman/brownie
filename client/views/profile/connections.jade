// Connections
.block
  .block-title
    h2.fa.fa-database &nbsp; Users
  .block-content
    .row
      table.table.table-striped.table-borderless.table-vcenter.remove-margin-bottom
        tbody
          tr.animation-fadeInQuick2(data-ng-repeat='user in users')
            td.text-center(style='width: 100px;')
              img.gravatar.img-circle.img-thumbnail.img-thumbnail-avatar(gravatar-src-once='user.email' gravatar-size='100')
            td
              h4
                strong {{user.fullName}}
              i.fa.fa-fw.fa-user.text-primary
              |  {{user.username}}
              br
              i.fa.fa-fw.fa-star.text-success
              |  {{user.points}} Brownie Points
            td.text-right(style='width: 20%;')
              .btn-group
                a.btn.btn-effect-ripple.btn-primary(data-ng-click='buyPrize(currentUser)', data-toggle='tooltip', title='Surprise')
                  i.gi.gi-gift
                a.btn.btn-effect-ripple.btn-primary(data-ng-click='buyDrinks(currentUser)', data-toggle='tooltip', title='Drinks')
                  i.gi.gi-celebration
                a.btn.btn-effect-ripple.btn-primary(data-ng-click='buyConcert(currentUser)', data-toggle='tooltip', title='Concert')
                  i.gi.gi-music
                a.btn.btn-effect-ripple.btn-primary(data-ng-click='buyDinner(currentUser)', data-toggle='tooltip', title='Dinner')
                  i.gi.gi-cutlery
                a.btn.btn-effect-ripple.btn-primary(data-ng-click='buyCode(currentUser)', data-toggle='tooltip', title='Capstone Project')
                  i.gi.gi-code
              a.btn.btn-effect-ripple.btn-danger(data-ng-click='subPoints(user)', data-toggle='tooltip', title='- Points')
                i.gi.gi-minus
                  | Points
              a.btn.btn-effect-ripple.btn-success(data-ng-click='addPoints(user)', data-toggle='tooltip', title='+ Points')
                i.gi.gi-plus
                  | Points
