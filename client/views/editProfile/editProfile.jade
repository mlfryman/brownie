// Edit Profile Modal
#edit-profile.modal.fade(data-ng-controller='EditProfileCtrl', data-ng-model='user')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(data-ng-click='ok()') &times;
        h3.modal-title
          strong Edit Profile
      .modal-body
        form#form-editProfile.form-horizontal(novalidate, role='form', name='profileForm')
          .form-group
            .col-xs-12
              input#name.form-control(type='text', name='name', data-ng-model='user.fullName', placeholder='FirstName LastName', required, autofocus)
          .form-group
            .col-xs-12
              input#email.form-control(type='email', name='email', data-ng-model='user.email', placeholder='Email', required)
          .form-group
            .col-xs-12
              input#username.form-control(type='text', name='username', data-ng-model='user.username', placeholder='Username', required)
          .form-group
            .col-xs-12
              input#password.form-control(type='password', name='password', data-ng-model='user.password', placeholder='Password', data-ng-minlength='6', required)
          .form-group.form-actions
            .col-xs-6
            .col-xs-6.text-right
              button.btn.btn-effect-ripple.btn-success(data-ng-show='profileForm.$valid', data-ng-click='update()')
                i.fa.fa-plus
                |  Create Account
      .modal-footer
        button.btn.btn-effect-ripple.btn-success(data-ng-click='updateProfile()') Save
        button.btn.btn-effect-ripple.btn-danger(data-ng-click='cancel()') Cancel

