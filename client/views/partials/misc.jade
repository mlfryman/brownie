#registerbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:50px')
  .panel.panel-primary
    .panel-heading
      .panel-title Sign Up
      div(style='float:right; font-size: 85%; position: relative; top:-10px')
        a(href='/#/login') Sign In
    .panel-body
      form.form-horizontal(novalidate, role='form', name='userForm')
        .form-group
          label.col-md-3.control-label(for='username') Username
          .col-md-9
            input.form-control(type='text', name='username', data-ng-model='user.username', placeholder='username', required, autofocus)
        .form-group
          label.col-md-3.control-label(for='email') Email
          .col-md-9
            input.form-control(type='email', name='email', data-ng-model='user.email', placeholder='Email Address', required)
            p.help-block Please provide your E-mail
        .form-group
          label.col-md-3.control-label(for='password') Password
          .col-md-9
            input.form-control(type='password', name='password', data-ng-model='user.password', placeholder='Password', required, data-ng-minlength='6')
            p.help-block Password should be at least 6 characters
        .form-group
          label.col-md-3.control-label(for='confirmPassword') Confirm Password
          .col-md-9
            input.form-control(type='password', data-ng-change='checkPassword()', data-ng-model='user.passwordConfirm', required)
        .form-group(style='margin-top:10px')
          .col-sm-12.controls
            button.btn.btn-info(data-ng-show='userForm.$valid', data-ng-click='register()')
              i.icon-hand-right
              | Sign Up
#loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:50px;')
  .panel.panel-primary
    .panel-heading
      .panel-title Sign In
      div(style='float:right; font-size: 80%; position: relative; top:-10px')
        a(href='#') Forgot password?
    .panel-body(style='padding-top:30px')
      form.form-horizontal(novalidate, role='form', name='loginForm')
        .input-group(style='margin-bottom: 25px')
          span.input-group-addon
            i.glyphicon.glyphicon-user
          input#email.form-control(type='email', name='email', data-ng-model='user.email', placeholder='email')
        .input-group(style='margin-bottom: 25px')
          span.input-group-addon
            i.glyphicon.glyphicon-lock
          input#password.form-control(type='password', name='password', data-ng-model='user.password', placeholder='password')
        .form-group(style='margin-top:10px')
          .col-sm-12.controls
            button.btn.btn-success(ng-show='loginForm.$valid', ng-click='login()') Login
        .form-group
          .col-md-12.control
            div(style='border-top: 1px solid#888; padding-top:15px; font-size:85%')
              | Don't have an account? &nbsp;
              a(href='/#/register')
                | Sign Up Here

