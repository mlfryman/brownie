// Main Container
#main-container
  // Header
  header.navbar.navbar-inverse.navbar-fixed-top(role='navigation', data-ng-controller='NavCtrl')
    // Left Header Navigation
    ul.nav.navbar-nav-custom
      // Header Link
      li.hidden-xs.animation-fadeInQuick
        a(href='/#/') Home
      // END Header Link
    // END Left Header Navigation
    // Right Header Navigation
    ul.nav.navbar-nav-custom.pull-right(data-ng-hide='currentUser.email')
      li: a(href='/#/register') Register
      li: a(href='/#/login') Login
    ul.nav.navbar-nav-custom.pull-right(data-ng-show='currentUser.email')
      // Search Form
      li
        //form.navbar-form-custom(action='/#/users/search', method='post', role='search')
        form.navbar-form-custom(novalidate, role='search', name='searchUsers')
          input#top-search.form-control(type='text', name='top-search', placeholder='Search users...')
      // END Search Form
      // User Dropdown
      li.dropdown
        a.dropdown-toggle(href='javascript:void(0)', data-toggle='dropdown')
          img(gravatar-src-once='currentUser.email', alt='Create your own Gravatar!')
          //img(src='/vendor/template/img/placeholders/avatars/avatar9.jpg', alt='avatar')
        ul.dropdown-menu.dropdown-menu-right
          li
            a(href='/#/dashboard')
              i.fa.fa-compass-o.fa-fw.pull-right
              | Dashboard
          li
            a(href='/#/inbox')
              i.fa.fa-inbox.fa-fw.pull-right
              | Inbox
          li
            a(href='/#/profile')
              i.fa.fa-pencil-square.fa-fw.pull-right
              | Profile
          li.divider
          li
            a(href='/#/logout')
              i.fa.fa-power-off.fa-fw.pull-right
              | Log out
  // END Header
  // Page content
  #page-content(data-ng-view='')

