// NOTE: this is the original nav bar
.navbar.navbar-default(role='navigation', data-ng-controller='NavCtrl')
  .container
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Brownie Points

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right(data-ng-hide='email')
        li: a(href='/#/') Home
        li: a(href='/#/register') Register
        li: a(href='/#/login') Login
      ul.nav.navbar-nav.navbar-right(data-ng-show='email')
        li: a(href='/#/') Home
        li: a(href='/#/logout') {{email}}

